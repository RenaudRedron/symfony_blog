{% extends 'themes/base_admin.html.twig' %}

{% block title %}Modification catégorie : {{ category.name }} {% endblock %}

{% block description %}Formulaire de modification d'une catégorie du tableau de bord{% endblock %}

{% block keywords %}modifier, catégorie, admin{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification d'une catégorie</h1>

    <div class="container"> 
        <div class="row">
            <div class="col-md-4 mx-auto">

                {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="admin_category_form_name">Nom<strong class="text-danger">*</strong></label>
                        <div class="text-danger">{{ form_errors(form.name) }}</div>
                            {{ form_widget(form.name, {"attr": {"class":"form-control"}})}}
                    </div>

                    <div class="mb-3">
                        <button formnovalidate class="btn btn-primary shadow w-100">Modifier la catégorie</button>
                    </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}